import java.util.Scanner;

public class CompoundInterestCalculator {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter the principal amount: ");
        double principal = scanner.nextDouble();

        System.out.print("Enter the annual interest rate (in decimal form): ");
        double rate = scanner.nextDouble();

        System.out.print("Enter the number of times that interest is compounded per year: ");
        int n = scanner.nextInt();

        System.out.print("Enter the number of years: ");
        int years = scanner.nextInt();

        double amount = calculateCompoundInterest(principal, rate, n, years);
        System.out.printf("The future value of the investment is: %.2f", amount);

        scanner.close();
    }

    public static double calculateCompoundInterest(double principal, double rate, int n, int years) {
        double amount = principal * Math.pow(1 + rate / n, n * years);
        return amount;
    }
}
